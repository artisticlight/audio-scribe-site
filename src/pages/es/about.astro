---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE } from '../../config';
import { getTranslations, localePath } from '../../i18n/utils';

const t = getTranslations('es');
const lp = (path = '') => localePath('es', path);
---

<BaseLayout title={t.about.title.replace('{companyName}', SITE.companyName)}>
  <section class="page-shell min-h-screen pt-[132px] pb-24">
    <div class="container-main max-w-3xl">
      <div class="page-content-card p-8 md:p-12">
        <h1 class="!text-heading-3 mb-4 font-medium" data-reveal>
          {t.about.title.replace('{companyName}', SITE.companyName)}
        </h1>
        <p class="text-tagline-1 text-secondary/60 mb-8" data-reveal data-reveal-delay="0.08">
          {t.about.subtitle}
        </p>

        <div class="space-y-8" data-reveal-group data-reveal-delay="0.14" data-reveal-distance="44">
          <div>
            <h2 class="text-heading-5 mb-3 font-medium">{t.about.missionTitle}</h2>
            <p class="text-tagline-1 text-secondary/60 leading-relaxed">
              {
                t.about.missionDesc
                  .replace('{companyName}', SITE.companyName)
                  .replace('{appName}', SITE.appName)
              }
            </p>
          </div>

          <div>
            <h2 class="text-heading-5 mb-3 font-medium">{t.about.privacyTitle}</h2>
            <p class="text-tagline-1 text-secondary/60 leading-relaxed">
              {
                t.about.privacyDesc
                  .replace('{companyName}', SITE.companyName)
                  .replace('{appName}', SITE.appName)
              }
            </p>
          </div>

          <div>
            <h2 class="text-heading-5 mb-3 font-medium">{t.about.ecosystemTitle}</h2>
            <p class="text-tagline-1 text-secondary/60 leading-relaxed">
              {
                t.about.ecosystemDesc
                  .replace('{companyName}', SITE.companyName)
                  .replace('{appName}', SITE.appName)
              }
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

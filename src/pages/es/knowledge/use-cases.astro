---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { SITE } from '../../../config';
import { getTranslations, localePath } from '../../../i18n/utils';

const t = getTranslations('es');
const lp = (path = '') => localePath('es', path);
---

<BaseLayout title={t.knowledge.useCasesTitle}>
  <section class="page-shell min-h-screen pt-[132px] pb-24">
    <div class="container-main">
      <div class="mb-16 text-center">
        <h1 class="!text-heading-3 md:!text-heading-2 mb-4 font-medium">
          {t.knowledge.useCasesTitle}
        </h1>
        <p class="mx-auto max-w-xl">
          {t.knowledge.useCasesSubtitle.replace('{appName}', SITE.appName)}
        </p>
      </div>

      <div class="mx-auto grid max-w-4xl grid-cols-1 gap-8 md:grid-cols-2">
        <div class="page-grid-card p-8">
          <div class="bg-ns-ivory mb-4 flex h-12 w-12 items-center justify-center rounded-xl">
            <svg
              class="text-secondary h-6 w-6"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              ><path d="M12 20h9"></path><path
                d="M16.5 3.5a2.12 2.12 0 013 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg
            >
          </div>
          <h3 class="text-heading-6 mb-2 font-medium">{t.knowledge.journalists}</h3>
          <p class="text-tagline-1 text-secondary/60">{t.knowledge.journalistsDesc}</p>
        </div>

        <div class="page-grid-card p-8">
          <div class="bg-ns-ivory mb-4 flex h-12 w-12 items-center justify-center rounded-xl">
            <svg
              class="text-secondary h-6 w-6"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              ><path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"></path><circle cx="9" cy="7" r="4"
              ></circle><path d="M23 21v-2a4 4 0 00-3-3.87"></path><path d="M16 3.13a4 4 0 010 7.75"
              ></path></svg
            >
          </div>
          <h3 class="text-heading-6 mb-2 font-medium">{t.knowledge.meetings}</h3>
          <p class="text-tagline-1 text-secondary/60">{t.knowledge.meetingsDesc}</p>
        </div>

        <div class="page-grid-card p-8">
          <div class="bg-ns-ivory mb-4 flex h-12 w-12 items-center justify-center rounded-xl">
            <svg
              class="text-secondary h-6 w-6"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              ><path d="M4 19.5v-15A2.5 2.5 0 016.5 2H20v20H6.5a2.5 2.5 0 010-5H20"></path></svg
            >
          </div>
          <h3 class="text-heading-6 mb-2 font-medium">{t.knowledge.students}</h3>
          <p class="text-tagline-1 text-secondary/60">{t.knowledge.studentsDesc}</p>
        </div>

        <div class="page-grid-card p-8">
          <div class="bg-ns-ivory mb-4 flex h-12 w-12 items-center justify-center rounded-xl">
            <svg
              class="text-secondary h-6 w-6"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              ><rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect><line
                x1="8"
                y1="21"
                x2="16"
                y2="21"></line><line x1="12" y1="17" x2="12" y2="21"></line></svg
            >
          </div>
          <h3 class="text-heading-6 mb-2 font-medium">{t.knowledge.creators}</h3>
          <p class="text-tagline-1 text-secondary/60">{t.knowledge.creatorsDesc}</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
